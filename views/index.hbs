<h1 class="text-white text-center">Homepage</h1>
{{#if products.length}}
<div class="container">
    <div class="row g-3">
        {{#each products}}
        <div class="col-4">
            <div class="card bg-dark text-white">
                <div class="card-header">
                    <img src="{{image}}" class="card-img-top w-100" alt="image">
                </div>
                <div class="card-body">
                    <h5 class="card-title fw-bold fs-5">{{title}}</h5>
                    <p class="fw-bold text-white">Author: <span class="fw-normal">{{userId.full_name}}</span></p>
                    <p>{{formatDate createdAt}}</p>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="fw-bold text-white">{{price}}.00$</p>
                        <div class="btn-group">
                            
                            <a href="/product/{{_id}}" class="btn btn-sm btn-primary">View</a>
                            {{#if @root.token}}
                                {{#ifequal userId._id @root.authId}} 
                                    <form action="/edit-product/{{_id}}" method="get">
                                        <input type="hidden" name="id" value="{{_id}}">
                                        <button class="btn btn-sm btn-outline-success" type="submit">Edit</button>
                                    </form>
                                    <form action="/delete-product/{{_id}}" method="post">
                                        <input type="hidden" name="id" value="{{_id}}">
                                        <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                                    </form>
                                {{/ifequal}}                             
                            {{/if}}
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{else}}
<p class="text-white text-center mt-5 fw-bold fs-3 opacity">There are no products</p>
{{/if}}
