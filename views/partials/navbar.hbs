<div class="container bg-dark">
  <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
  <div class="col-md-3 mb-2 mb-md-0">
    <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none text-white fs-5 fw-bold">
      Shop App
    </a>
  </div>

  <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
    {{#if isIndex}}
      <li><a href="/" class="nav-link px-2">Home</a></li>
    {{else}}
      <li><a href="/" class="nav-link px-2 text-white">Home</a></li>
    {{/if}}

    {{#if isProduct}}
      <li><a href="/products" class="nav-link px-2">Products</a></li>
    {{else}}
      <li><a href="/products" class="nav-link px-2 text-white">Products</a></li>
    {{/if}}
    
    {{#if isProductAdd}}
      <li><a href="/add-product" class="nav-link px-2">Add Product</a></li>
    {{else}}
      <li><a href="/add-product" class="nav-link px-2 text-white">Add Product</a></li>
    {{/if}}
  </ul>

  {{#if token}}
    <a href="/logout" class="btn btn-sm me-2 text-white">Logout</a>
  {{else}}
    <div class="col-md-3 text-end">
      {{#if isLogin}}
        <a href="/login" class="btn btn-sm text-primary me-2 btn-outline-dark">Login</a>
      {{else}}
        <a href="/login" class="btn btn-sm text-white me-2 btn-outline-dark">Login</a>
      {{/if}}

      {{#if isRegister}}
        <a href="/register" class="btn btn-sm btn-outline-primary">Register</a>
      {{else}}
        <a href="/register" class="btn btn-sm btn-primary">Register</a>
      {{/if}}
    </div>
  {{/if}}
</header>
</div>